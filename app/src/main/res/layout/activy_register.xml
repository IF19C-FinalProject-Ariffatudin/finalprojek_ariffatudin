<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".SignUpTwo">

    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dp"
        android:background="@drawable/sp_rectangle_root">

        <EditText
            android:textColor="@color/black"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Username"
            android:paddingLeft="20dp" />

        <View
            android:id="@+id/v_saparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_username"
            android:background="#E8E9E8" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="328dp"
            android:layout_height="69dp"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="-9dp"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="20dp"
            android:hint="*********"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:src="@drawable/ic_baseline_arrow_forward_24" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Daftar"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_login"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_title"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/sp_rectangle_login"
        android:text="Masuk"
        android:textAllCaps="false" />

</RelativeLayout>